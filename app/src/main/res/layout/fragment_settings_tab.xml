<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Switches -->
    <Switch
        android:id="@+id/keep_screen_on_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep Screen On"
        android:layout_marginTop="16dp"/>

    <Switch
        android:id="@+id/countdown_beep_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Countdown Beep"
        android:layout_marginTop="8dp"/>

    <Switch
        android:id="@+id/halfway_warning_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Halfway Warning"
        android:layout_marginTop="16dp"/>

    <!-- Ringtone Selection Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/selected_ringtone_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ringtone: (None)" />

        <Button
            android:id="@+id/select_ringtone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Select" />

        <Button
            android:id="@+id/test_ringtone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Test" />

    </LinearLayout>

    <!-- Version Info -->
    <TextView
        android:id="@+id/version_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        tools:text="Cronos v0.1-abcdef" />

</LinearLayout>